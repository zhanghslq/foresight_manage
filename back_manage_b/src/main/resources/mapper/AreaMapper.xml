<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhs.backmanageb.mapper.AreaMapper">

    <resultMap id="treeMap" type="com.zhs.backmanageb.model.bo.AreaBO">
        <id column="id" property="id" />
        <result property="name" column="name"/>
        <collection property="children" ofType="com.zhs.backmanageb.model.bo.AreaBO" column="id" select="selectByParentId"/>
    </resultMap>


    <select id="selectAllTree" resultMap="treeMap">
        select id,name,parent_id from  area
        where parent_id=0
    </select>
    <select id="selectByParentId" resultMap="treeMap">
        select id,name,parent_id from  area where parent_id=#{parentId,jdbcType=BIGINT}
    </select>

</mapper>
