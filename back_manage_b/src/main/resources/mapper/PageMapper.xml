<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhs.backmanageb.mapper.PageMapper">
    <resultMap id="baseMap" type="com.zhs.backmanageb.model.bo.PageBO">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <collection property="children" ofType="com.zhs.backmanageb.model.bo.PageBO" column="id" select="com.zhs.backmanageb.mapper.AreaMapper.selectByParentId"/>
    </resultMap>

    <select id="listTree" resultMap="baseMap">
        select id,name,description  from page
        where parent_id=0 and deleted=0
    </select>
    <select id="listByParentId" resultType="com.zhs.backmanageb.model.bo.PageBO">
        select id,name,description  from page
        where parent_id=#{parentId,jdbcType=BIGINT} and deleted=0
    </select>
</mapper>
